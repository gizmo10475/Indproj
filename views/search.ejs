<%- include("header.ejs", {title: title}) %>

<h1 class="title">Search</h1>

    <form class="label-left" method="post" action="/search">
        <label for="searchstring" name="searchstring">
        </label>
        <input id="searchstring" type="text" name="searchstring" value="" class="searchinput">
        <input type="submit" formmethod="post" value="Search" class="buttonsearch">
    </form>

    <table class="styled-table">
        <tr>
            <th>SSN</th>
            <th>Name</th>
            <th>Vaccine</th>
            <th>Type</th>
            <th>Date</th>
            <th>Description</th>
            <th>Phone</th>
        </tr>

        <% for (const row of res) { %>
            <tr>
                <td>
                    <a href="/patient/<%= row.ssn %>">
                        <%= row.ssn %>
                    </a>
                </td>
                <td>
                    <a href="/patient/<%= row.ssn %>">
                        <%= row.name %>
                    </a>
                </td>
                <td>
                    <%= row.vaccine %>
                </td>
                <td>
                    <%= row.type %>
                </td>
                <td>
                    <%= row.date %>
                </td>
                <td>
                    <%= row.description %>
                </td>
                <td>
                    <%= row.phone %>
                </td>
            </tr>
            <% }; %>
    </table>

<%- include("footer.ejs") %>
